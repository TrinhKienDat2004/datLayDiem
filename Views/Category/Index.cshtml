@model IEnumerable<BAI5_CONGD.Models.Category>

@{
    ViewData["Title"] = "Category Management";
    Layout = "_Layout";
}

<h2 class="mt-4 mb-4">Category Management</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add New Category
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No categories found. Click <strong>Add New Category</strong> to create one.
    </div>
}
else
{
    <table class="table table-striped table-bordered align-middle">
        <thead class="table-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().CategoryId)</th>
                <th>@Html.DisplayNameFor(model => model.First().CategoryName)</th>
                <th class="text-center" style="width: 220px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CategoryId</td>
                    <td>@item.CategoryName</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-sm btn-warning me-1">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-action="Details" asp-route-id="@item.CategoryId" class="btn btn-sm btn-info me-1">
                            <i class="bi bi-info-circle"></i> Details
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-sm btn-danger"
                           onclick="return confirm('Are you sure you want to delete this category?');">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}