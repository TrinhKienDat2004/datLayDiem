@model BAI5_CONGD.Models.Category

@{
    ViewData["Title"] = "Delete Category";
    Layout = "_Layout";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm mt-4">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">Delete Category</h4>
            </div>
            <div class="card-body">
                <p class="mb-3">Are you sure you want to delete this category?</p>
                <dl class="row">
                    <dt class="col-sm-4">ID</dt>
                    <dd class="col-sm-8">@Model.CategoryId</dd>
                    <dt class="col-sm-4">Name</dt>
                    <dd class="col-sm-8">@Model.CategoryName</dd>
                </dl>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="CategoryId" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>