@model BAI5_CONGD.Models.Book

@{
    ViewData["Title"] = "Chi tiết sách";
}

<div class="container mt-4">
    <div class="row align-items-center">
        <!-- Ảnh sách căn giữa dọc -->
        <div class="col-md-4 d-flex justify-content-center">
            <div>
                @if (!string.IsNullOrEmpty(Model.Image))
                {
                    <img src="~/ImageBooks/@Model.Image" alt="@Model.Title" class="img-thumbnail shadow" style="max-width:260px; max-height:380px;" />
                }
                else
                {
                    <img src="https://via.placeholder.com/200x300?text=No+Image" class="img-thumbnail shadow" />
                }
            </div>
        </div>
        <!-- Thông tin chi tiết -->
        <div class="col-md-8">
            <h2 class="mb-3">@Model.Title</h2>
            <div class="mb-2">
                <span class="text-muted">Tác giả:</span> <b>@Model.Author</b>
                <span class="mx-3 text-muted">|</span>
                <span class="text-muted">Thể loại:</span> <b>@Model.Category?.CategoryName</b>
            </div>
            <div class="mb-2">
                <span class="text-warning fs-5">&#9733;&#9733;&#9733;&#9733;&#9734;</span>
                <span class="text-secondary">(79 đánh giá)</span>
            </div>
            <div class="mb-3">
                <span class="h3 text-danger">@Model.Price.ToString("N0") đ</span>
                <span class="text-muted ms-2"><del>@((Model.Price * 1.2m).ToString("N0")) đ</del></span>
                <span class="badge bg-danger ms-2">-23%</span>
            </div>
            <div class="mb-2">
                <span class="text-muted">Giao hàng đến</span>
                <a href="#" class="ms-1">Thay đổi</a>
            </div>
            <div class="mb-2">
                <span class="text-muted">Đổi trả sản phẩm trong 30 ngày</span>
                <a href="#" class="ms-1">Xem thêm</a>
            </div>
            <div class="mb-3">
                <label for="quantity" class="form-label">Số lượng:</label>
                <div class="input-group" style="width:120px;">
                    <button class="btn btn-outline-secondary" type="button" onclick="var q=document.getElementById('quantity');if(q.value>1)q.value--;">-</button>
                    <input type="number" id="quantity" class="form-control text-center" value="1" min="1" />
                    <button class="btn btn-outline-secondary" type="button" onclick="var q=document.getElementById('quantity');q.value++;">+</button>
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-outline-danger me-2"><i class="bi bi-cart-plus"></i> Thêm vào giỏ hàng</button>
                <button class="btn btn-danger">Mua ngay</button>
            </div>
            <div class="mt-4">
                <h5>Mô tả sách</h5>
                <p>@Model.Description</p>
            </div>
            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">Sửa</a>
                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            </div>
        </div>
    </div>
</div>